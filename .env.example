# dev or prod mode
# Set to true for production, false for development.
# In dev mode, no PIN is required for login.
# In prod mode, PIN_HASH must be set to enable login.
IS_PROD=false


# Core app config
# Change APP_SECRET to a long random string in production
APP_SECRET=dev-secret-change-me

# Optional: SHA256 of your PIN as hex string.
# If empty or unset, dev mode allows login without PIN enforcement.
# Generate with: python -c "import hashlib;print(hashlib.sha256(b'1234').hexdigest())"
PIN_HASH=

# Storage selection
# Set to true to use Google Sheets, false for local CSV fallback.
USE_GOOGLE_SHEETS=false

# Google Sheets configuration (required when USE_GOOGLE_SHEETS=true)
# Spreadsheet name (the document must be shared with the service account)
SPREADSHEET_NAME=My Warehouse
SPREADSHEET_ID=

# Provide either a path to the service account JSON file...
GOOGLE_SERVICE_ACCOUNT_JSON=/absolute/path/to/service_account.json

# ...or paste the JSON content directly as a single line.
# Tip: if using multiline, wrap in single quotes or use env file loaders that support quoted values.
GOOGLE_SERVICE_ACCOUNT_INFO=
